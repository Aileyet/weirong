<?xml version='1.0' encoding='utf-8'?>
<widget id="cn.weirong.magicbox.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MagicBoxApp</name>
    <description>
        	智能家居系统
    </description>
    <author email="wujianlin@weirong.cn" href="http://weirong.cn">
      	 软件技术部魔方系统开发小组
    </author>
    <content src="index.html" />
	<preference name="Fullscreen" value="true" /> <!-- 设置程序是否全屏 -->
	<preference name="Orientation" value="portrait" /> <!-- 锁定应用程序屏幕方向 -->

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
